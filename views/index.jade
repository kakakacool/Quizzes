extends layout
block content
	.page-header.alert
		h1(align='center') Quizzes
	.row
		.col-md-4.col-md-offset-4
			form(role='form' method='POST')
				.form-group
					.col-md-12
						label(for="email") Email address
						input(autocomplete='false' type="email" class="form-control" name="email"
						 id="email" placeholder="Enter email" data-toggle="popover" data-placement="right" data-content="write email")
				.form-group
					.col-md-12
						label(for="password") Password
						input(type="password" class="form-control" id="password" 
							placeholder="Enter Password" name="password" data-toggle="popover" data-placement="right" data-content="write password")
				.form-group
					.col-md-12
						button.btn.btn-success.btn-block#login	log In
				.form-group		
					.col-md-12
						button.btn.btn-danger.btn-block#register	Registration
	script.
		$("#login").on('click',function(e){
			e.preventDefault();
			var email=$("#email").val().trim();
			var password=$("#password").val().trim();
			if(!email){
				$("#email").css("border","1px solid tomato");
				$("#email").popover("show");
				$("#email").focus();
			}
			if(!password){
				$("#password").css("border","1px solid tomato");
				$("#password").popover("show");
				$("#password").focus();
			}
			if(!password||!email)
				return;
			$.post("/users",{email:email,password:password},function(data){
				if(data.success){
					if(email=="admin@gmail.com"){
						window.location="/admin";
					}else{
						window.location="/users";
					}
				}else{
					$(".page-header").addClass("alert-warning",2000,"easeOutBounce" );
					$(".page-header h1").html(data.text);
				}
			});
		});
		$("#register").on('click',function(e){
			e.preventDefault();
			var email=$("#email").val().trim();
			var password=$("#password").val().trim();
			if(!email){
				$("#email").css("border","1px solid tomato");
				$("#email").popover("show");
				$("#email").focus();
			}
			if(!password){
				$("#password").css("border","1px solid tomato");
				$("#password").popover("show");
				$("#password").focus();
			}
			if(!password||!email)
				return;

			$.post("/",{email:email,password:password},function(data){
				if(data.success){
					$(".page-header").addClass("alert-success",1500,"easeOutBounce" );
					$(".page-header h1").html(data.text);
				}else{
					$(".page-header").addClass("alert-warning",1500,"easeOutBounce" );
					$(".page-header h1").html(data.text);
				}
				
			});
		});
