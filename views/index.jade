extends layout
block content
	.page-header 
		h1(align='center') Quizzes
	.row
		.col-md-4.col-md-offset-4
			form(role='form' method='POST')
				.form-group
					.col-md-12
						label(for="email") Email address
						input(autocomplete='false' type="email" class="form-control" id="email" placeholder="Enter email")
				.form-group
					.col-md-12
						label(for="password") Password
						input(type="password" class="form-control" id="password" placeholder="Enter Password")
				.form-group
					.col-md-2
						button.btn.btn-success	Log In
					.col-md-2.col-md-offset-1
						button.btn.btn-info	Registration					